<div class="grid-x grid-padding-x">
  <div class="large-12 cell">
    <h3>Русско-английский переводчик</h3>
  </div>
</div>

<form method="post">
  <div class="grid-x grid-padding-x">
    <div class="medium-12 cell">
      <label>Введите слово или фразу для перевода
        <input type="text" placeholder="hi" name="ru_word_or_phrase">
      </label>
      <select name="ru_select">
        <option value="/word/ru">
          Перевести слово
        </option>
        <option value="/letter/ru">
          Список слов на заданную букву
        </option>
        <option value="/phrase/ru">
          Перевести фразу
        </option>
      </select>
      <input type="submit" value="Выбрать" class="button">
    </div>
  </div>
</form>
